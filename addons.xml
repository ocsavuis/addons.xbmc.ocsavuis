<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.live.streams.ocs"
       name="SimpleLiveStreams"
       version="1.0.1"
       provider-name="ocsavuis">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
	<import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.simple.downloader" version="0.9.1"/>
    <import addon="script.module.simplejson" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>livestreams</summary>
    <description>livestreams</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.xbmc.ocsavuis" name="Ocsavuis repositorio" version="1.0.1" provider-name="Ocsavuis">
	<extension point="xbmc.addon.repository" name="Ocsavuis Add-on Repository">
		<info compressed="false">http://github.com/ocsavuis/addons.xbmc.ocsavuis/raw/master/addons.xml</info>
		<checksum>http://github.com/ocsavuis/addons.xbmc.ocsavuis/raw/master/addons.xml.md5</checksum>
		<datadir zip="false">http://github.com/ocsavuis/addons.xbmc.ocsavuis/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Repositorio Ocsavuis</summary>
		<description>Addons de Ocsavuis</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
